{
  "name": "node-express-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "npm run build-ts && npm run lint",
    "build-ts": "rm -rf dist && tsc -p tsconfig.prod.json",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watch",
    "watch-ts": "tsc -w -p tsconfig.json",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lusca": "^1.6.1",
    "module-alias": "^2.2.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.23",
    "@types/lusca": "^1.6.1",
    "@types/node": "^12.7.8",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.3.1",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^1.19.2",
    "prettier": "2.2.1",
    "supertest": "^6.1.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "npm run lint",
      "npm t -- --passWithNoTests"
    ]
  },
  "_moduleAliases": {
    "~": "dist"
  },
  "heroku-run-build-script": true
}
